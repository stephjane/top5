<p id="notice"><%= notice %></p>

<h1>Listing Songs</h1>
<p>
<%= link_to new_song_path do %>
  <span class="glyphicon glyphicon-plus"></span>Add Song
<%end%>
</p>
  <div class="row">
    <% @songs.each do |song| %>
    <div class="col-md-6">
      <div class="well">
          <h3><%= link_to song.name, song %></h3>
          <h3><%= song.artist.name %></h3>
          <p>
            <% song.rating.times do %>
              <span class=" glyphicon glyphicon-star"></span>
            <%end%>
          </p>         
          <p><%= link_to edit_song_path(song) do %>
            <span class="glyphicon glyphicon-pencil"></span>
            <%end%>
              <%= link_to song, method: :delete, data: { confirm: 'Are you sure?' } do%>
              <span class="glyphicon glyphicon-remove"></span>
              <%end%>
          </p>
      </div>
    </div>
    <% end %>
  </div>
 

<br>


